    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey_5"
        android:paddingLeft="15dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/edit_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Mode"
            android:background="@drawable/rec_cornor"/>

    </LinearLayout>
    <ViewSwitcher
        android:id="@+id/view_switch"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v4.widget.NestedScrollView
            android:id="@+id/scroll_view_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/grey_5"
            android:clipToPadding="false"
            android:paddingTop="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:scrollbars="none"
            android:scrollingCache="true"
            android:fillViewport="true"
            android:minHeight="600dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Han's"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        />
                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" substitute decision maker is:"
                        android:textStyle="bold"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        />

                </LinearLayout>



                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Full Name:"
                    android:textStyle="bold"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/first_name"
                        android:layout_marginTop="5dp"
                        style="@style/EditText.Flat.Grey"
                        android:layout_width="160dp"
                        android:layout_weight="1"
                        android:layout_height="40dp"
                        android:background="@drawable/edit_text_round_big_white"
                        android:paddingLeft="@dimen/spacing_middle"
                        android:paddingRight="@dimen/spacing_middle" />
                    <View
                        android:layout_width="15dp"
                        android:layout_height="0dp"/>

                    <TextView
                        android:id="@+id/last_name"
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"
                        style="@style/EditText.Flat.Grey"
                        android:layout_width="160dp"
                        android:layout_height="40dp"
                        android:background="@drawable/edit_text_round_big_white"
                        android:paddingLeft="@dimen/spacing_middle"
                        android:paddingRight="@dimen/spacing_middle" />

                </LinearLayout>

                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Relationship of this substitute decision maker to me:"
                    android:textStyle="bold"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    />
                <TextView
                    android:id="@+id/relation_ship"
                    android:layout_marginTop="5dp"
                    style="@style/EditText.Flat.Grey"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/edit_text_round_big_white"
                    android:minHeight="45dp"
                    android:paddingLeft="@dimen/spacing_middle"
                    android:paddingRight="@dimen/spacing_middle" />

                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phone Number:"
                    android:textStyle="bold"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    />
                <TextView
                    android:id="@+id/phone_number"
                    android:layout_marginTop="5dp"
                    style="@style/EditText.Flat.Grey"
                    android:layout_width="180dp"
                    android:layout_height="40dp"
                    android:background="@drawable/edit_text_round_big_white"
                    android:minHeight="45dp"
                    android:paddingLeft="@dimen/spacing_middle"
                    android:paddingRight="@dimen/spacing_middle" />
                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Address:"
                    android:textStyle="bold"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    />


                <TextView
                    android:id="@+id/address_1"
                    style="@style/EditText.Flat.Grey"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/edit_text_round_big_white"
                    android:paddingLeft="@dimen/spacing_middle"
                    android:paddingRight="@dimen/spacing_middle" />

                <TextView
                    android:id="@+id/address_2"
                    style="@style/EditText.Flat.Grey"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="@dimen/spacing_large"
                    android:background="@drawable/edit_text_round_big_white"
                    android:paddingLeft="@dimen/spacing_middle"
                    android:paddingRight="@dimen/spacing_middle" />
                <LinearLayout
                    android:layout_marginTop="@dimen/spacing_large"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/city_box"
                        android:layout_marginTop="5dp"
                        style="@style/EditText.Flat.Grey"
                        android:layout_width="160dp"
                        android:layout_weight="1"
                        android:layout_height="40dp"
                        android:background="@drawable/edit_text_round_big_white"
                        android:paddingLeft="@dimen/spacing_middle"
                        android:paddingRight="@dimen/spacing_middle" />
                    <View
                        android:layout_width="15dp"
                        android:layout_height="0dp"/>

                    <TextView
                        android:id="@+id/province_box"
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"
                        style="@style/EditText.Flat.Grey"
                        android:layout_width="160dp"
                        android:layout_height="40dp"
                        android:background="@drawable/edit_text_round_big_white"
                        android:paddingLeft="@dimen/spacing_middle"
                        android:paddingRight="@dimen/spacing_middle" />

                </LinearLayout>


                <TextView
                    android:id="@+id/zip_code"
                    style="@style/EditText.Flat.Grey"
                    android:layout_width="180dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="@dimen/spacing_large"
                    android:background="@drawable/edit_text_round_big_white"
                    android:paddingLeft="@dimen/spacing_middle"
                    android:paddingRight="@dimen/spacing_middle" />

                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email Address:"
                    android:textStyle="bold"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    />

                <TextView
                    android:id="@+id/email_address"
                    style="@style/EditText.Flat.Grey"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/spacing_large"
                    android:background="@drawable/edit_text_round_big_white"
                    android:paddingLeft="@dimen/spacing_middle"
                    android:paddingRight="@dimen/spacing_middle" />

                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="This person was appointed through a Power of Attorney for Personal Care"
                    android:textStyle="bold"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    />

                <RadioGroup
                    android:id="@+id/radio_group"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RadioButton
                        android:id="@+id/radio_pirates"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yes"
                        android:clickable="false"
                        />
                    <RadioButton
                        android:id="@+id/radio_ninjas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No"
                        android:clickable="false"
                        />
                </RadioGroup>

                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Location of the current Power of Attorney for Personal Care:"
                    android:textStyle="bold"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    />

                <TextView
                    android:id="@+id/location_box"
                    style="@style/EditText.Flat.Grey"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="@dimen/spacing_large"
                    android:background="@drawable/edit_text_round_big_white"
                    android:paddingLeft="@dimen/spacing_middle"
                    android:paddingRight="@dimen/spacing_middle" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:visibility="invisible"/>
            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>


